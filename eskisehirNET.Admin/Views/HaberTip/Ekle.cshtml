@model eskisehirNET.Data.Model.HaberTip

@{
    ViewBag.Title = "Ekle";
}



@section Header{}

<div class="page animsition">
    <div class="page-header">
        <h1 class="page-title">Yeni Haber Kategori Ekleme</h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li>@Html.ActionLink("Haber Tipleri Listesi", "Index")</li>
            <li class="active">Haber Tipi Ekle</li>
        </ol>
    </div>
    <div class="page-content">
        <!-- Panel Form Elements -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Form Elements</h3>
            </div>
            <div class="panel-body container-fluid">
                <div class="row row-lg">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-sm-6 col-md-4">
                            <div class="example-wrap">
                                <h4 class="example-title">KATEGORİ ADI</h4>
                                @Html.TextBoxFor(model => model.HaberTipi, new { @class = "form-control", id = "inputHelpText" })
                                @*@Html.EditorFor(model => model.KategoriAdi, new { AllowHtmlAttribute = new { @class = "form-control", @id = "inputHelpText" } })*@
                                @Html.ValidationMessageFor(Model => Model.HaberTipi, "", new { @class = "text-danger" })
                                <span class="help-block">
                                    Haberleri konularına göre arşivlemek için haber kategori oluşturmanız gerekmektedir.
                                </span>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-info" />
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


@section PagePlugins{}

@section PageScripts{}

